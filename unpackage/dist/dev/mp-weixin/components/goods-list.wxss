.goods_list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.goods_list .goods_item {
  box-sizing: border-box;
  width: 358rpx;
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-bottom: 30rpx;
  background: #e6eef4;
  border: 1rpx solid #EEEEEE;
  border-radius: 20rpx;
  box-shadow: inset -20rpx -20rpx 30rpx #cfd6dc, inset 20rpx 20rpx 30rpx #FFF;
}
.goods_list .goods_item .shop_img {
  border-radius: 20rpx;
}
.goods_list .goods_item .price {
  padding: 20rpx 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.goods_list .goods_item .price .new-price {
  color: #FF7A5E;
  font-size: 35rpx;
  vertical-align: bottom;
  font-weight: 700;
  max-width: 200rpx;
}
.goods_list .goods_item .price .old-price {
  padding-top: 10rpx;
  text-indent: 20rpx;
  font-size: 30rpx;
  color: gray;
  text-decoration: line-through;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods_list .goods_item .name {
  font-size: 30rpx;
  margin-left: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

